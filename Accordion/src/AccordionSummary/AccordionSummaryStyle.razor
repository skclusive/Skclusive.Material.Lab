@namespace Skclusive.Material.Accordion
@inherits StyleComponentBase

.AccordionSummary-Root {
  display: flex;
  padding: 0px 16px;
  min-height: 48px;
  transition: min-height 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}

.AccordionSummary-Root:hover:not(.AccordionSummary-Disabled) {
  cursor: pointer;
}

.AccordionSummary-Root.AccordionSummary-Expanded {
  min-height: 64px;
}

.AccordionSummary-Root.AccordionSummary-Focused {
  background-color: rgba(255, 255, 255, 0.12);
}

.AccordionSummary-Root.AccordionSummary-Disabled {
  opacity: 0.38;
}

.AccordionSummary-Content {
  margin: 12px 0;
  display: flex;
  flex-grow: 1;
  transition: margin 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}

.AccordionSummary-Content.AccordionSummary-Expanded {
  margin: 20px 0;
}

.AccordionSummary-Icon {
  transform: rotate(0deg);
  transition: transform 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}

.AccordionSummary-Icon:hover {
  background-color: transparent;
}

.AccordionSummary-Icon.AccordionSummary-Icon-Expanded {
  transform: rotate(180deg);
}