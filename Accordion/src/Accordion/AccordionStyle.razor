@namespace Skclusive.Material.Accordion
@inherits StyleComponentBase

.Accordion-Root {
  position: relative;
  transition: margin 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}

.Accordion-Root:before {
  top: -1px;
  left: 0;
  right: 0;
  height: 1px;
  content: "";
  opacity: 1;
  position: absolute;
  transition: opacity 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  background-color: rgba(255, 255, 255, 0.12);
}

.Accordion-Root.Accordion-Expanded {
  margin: 16px 0;
}

.Accordion-Root.Accordion-Disabled {
  background-color: rgba(255, 255, 255, 0.12);
}

.Accordion-Root.Accordion-Expanded + .Accordion-Root:before {
  display: none;
}

.Accordion-Root.Accordion-Expanded:first-child {
  margin-top: 0;
}

.Accordion-Root.Accordion-Expanded:last-child {
  margin-bottom: 0;
}

.Accordion-Root.Accordion-Expanded:before {
  opacity: 0;
}

.Accordion-Root:first-child:before {
  display: none;
}

.Accordion-Rounded {
  border-radius: 0;
}

.Accordion-Rounded:first-child {
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

.Accordion-Rounded:last-child {
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}

@supports (-ms-ime-align: auto) {
  .Accordion-Rounded:last-child {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }
}

@code {
    private string supports => "@supports";
}