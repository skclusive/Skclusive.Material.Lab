@namespace Skclusive.Material.Tooltip
@inherits StyleComponentBase

.Tooltip-Popper {
  z-index: var(--theme-zindex-tooltip);
  pointer-events: none;
}
.Tooltip-Popper-Interactive {
  pointer-events: auto;
}
.Tooltip-Popper-Arrow[x-placement*="bottom"] .Tooltip-Arrow {
  top: 0;
  left: 0;
  margin-top: -0.71em;
  margin-left: 4px;
  margin-right: 4px;
}
.Tooltip-Popper-Arrow[x-placement*="top"] .Tooltip-Arrow {
  left: 0;
  bottom: 0;
  margin-left: 4px;
  margin-right: 4px;
  margin-bottom: -0.71em;
}
.Tooltip-Popper-Arrow[x-placement*="right"] .Tooltip-Arrow {
  left: 0;
  width: 0.71em;
  height: 1em;
  margin-top: 4px;
  margin-left: -0.71em;
  margin-bottom: 4px;
}
.Tooltip-Popper-Arrow[x-placement*="left"] .Tooltip-Arrow {
  right: 0;
  width: 0.71em;
  height: 1em;
  margin-top: 4px;
  margin-right: -0.71em;
  margin-bottom: 4px;
}
.Tooltip-Popper-Arrow[x-placement*="left"] .Tooltip-Arrow::before {
  transform-origin: 0 0;
}
.Tooltip-Popper-Arrow[x-placement*="right"] .Tooltip-Arrow::before {
  transform-origin: 100% 100%;
}
.Tooltip-Popper-Arrow[x-placement*="top"] .Tooltip-Arrow::before {
  transform-origin: 100% 0;
}
.Tooltip-Popper-Arrow[x-placement*="bottom"] .Tooltip-Arrow::before {
  transform-origin: 0 100%;
}
.Tooltip-Title {
  color: var(--theme-palette-common-white);
  padding: 4px 8px;
  font-size: var(--theme-component-tooltip-title-font-size);
  max-width: 300px;
  word-wrap: break-word;
  font-family: var(--theme-typography-font-family);
  font-weight: var(--theme-typography-font-weight-medium);
  line-height: 1.4em;
  border-radius: calc(var(--theme-shape-border-radius) * 1px);
  background-color: var(--theme-component-tooltip-title-background);
}
.Tooltip-Title-Arrow {
  margin: 0;
  position: relative;
}
.Tooltip-Arrow {
  color: var(--theme-component-tooltip-arrow-color);
  width: 1em;
  height: var(--theme-component-tooltip-touch-font-size);
  overflow: hidden;
  position: absolute;
  box-sizing: border-box;
}
.Tooltip-Arrow::before {
  width: 100%;
  height: 100%;
  margin: auto;
  content: "";
  display: block;
  transform: rotate(45deg);
  background-color: currentColor;
}
.Tooltip-Touch {
  padding: 8px 16px;
  font-size: 0.875rem;
  font-weight: 400;
  line-height: 1.14286em;
}
.Tooltip-Title-Alignment-Left {
  margin: 0 24px ;
  transform-origin: right center;
}
@media (min-width:600px) {
  .Tooltip-Title-Alignment-Left {
    margin: 0 14px;
  }
}
.Tooltip-Title-Alignment-Right {
  margin: 0 24px;
  transform-origin: left center;
}
@media (min-width:600px) {
  .Tooltip-Title-Alignment-Right {
    margin: 0 14px;
  }
}
.Tooltip-Title-Alignment-Top {
  margin: 24px 0;
  transform-origin: center bottom;
}
@media (min-width:600px) {
  .Tooltip-Title-Alignment-Top {
    margin: 14px 0;
  }
}
.Tooltip-Title-Alignment-Bottom {
  margin: 24px 0;
  transform-origin: center top;
}
@media (min-width:600px) {
  .Tooltip-Title-Alignment-Bottom {
    margin: 14px 0;
  }
}